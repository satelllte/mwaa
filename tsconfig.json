{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "pretty": true,
    "declaration": true,  
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
